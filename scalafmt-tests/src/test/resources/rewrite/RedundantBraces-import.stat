rewrite.rules = [RedundantBraces]
rewrite.redundantBraces.importStatements = true
<<< import simple
import x.{Y}
>>>
import x.Y
<<< import wildcard
import x.{_}
>>>
import x._
<<< import wildcard Scala 3
import x.{*}
>>>
import x.*
<<< import multiple wildcard untouched
import x.{Y, _}
>>>
import x.{Y, _}
<<< import multiple statements untouched
import x.{Y, Z}
>>>
import x.{Y, Z}
<<< import single statement without braces untouched
import x.Y
>>>
import x.Y
<<< don't rewrite on disabled flag
rewrite.redundantBraces.importStatements = false
===
import x.{Y}
>>>
import x.{Y}
