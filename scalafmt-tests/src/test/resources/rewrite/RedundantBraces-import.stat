rewrite.rules = [RedundantBraces]
rewrite.redundantBraces.imports = true

<<< remove braces around single importee
{
import a.{b}
import a.b.{ c }, k.{f}
import a.b.{_}
}
>>>
{
  import a.b
  import a.b.c, k.f
  import a.b._
}
<<< leave braces around multiple importees
import a.{b, c}
>>>
import a.{b, c}
<<< leave braces around named importees
import a.{b => c}
>>>
import a.{b => c}