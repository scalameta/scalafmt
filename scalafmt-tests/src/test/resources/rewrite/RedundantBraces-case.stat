rewrite.rules = [RedundantBraces]
rewrite.redundantBraces.generalExpressions = true
<<< case clauses
object a {

  val x: Int => String = {
    case 2 => {
      "two"
    }
    case _ => {
      "other"
    }
  }

}
>>>
object a {

  val x: Int => String = {
    case 2 =>
      "two"
    case _ =>
      "other"
  }

}
<<< case clauses with stuff
object a {

  val x: Int => String = {
    case 2 => {
      println("TWO")
      "two"
    }
    case _ => {
      // Nice
      "other"
    }
  }

}
>>>
object a {

  val x: Int => String = {
    case 2 =>
      println("TWO")
      "two"
    case _ =>
      // Nice
      "other"
  }

}
<<< case clauses to unit
object a {

  val x: Int => Unit = {
    case 0 =>
    case 1 => {}
    case 2 => {
    }
    case _ => {println("?")}
  }

}
>>>
object a {

  val x: Int => Unit = {
    case 0 =>
    case 1 =>
    case 2 =>
    case _ => println("?")
  }

}
