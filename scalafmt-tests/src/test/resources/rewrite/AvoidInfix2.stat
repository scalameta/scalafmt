rewrite.rules = [AvoidInfix]
rewrite.neverInfix.includeFilters = [".*"]
<<< right assoc
lst :: foo
>>>
lst.::(foo)
<<< basic
lst :+ foo
>>>
lst.:+(foo)
<<< basic (format:off)
// format: off
lst :+ foo

>>>
// format: off
lst :+ foo
<<< default scalatest
behavior of "..." {
  a shouldBe b
}
>>>
behavior.of("..." {
  a shouldBe b
})
<<< default scalatest with appended excludeFilters
rewrite.neverInfix.excludeFilters."+" = [ "of" ]
===
behavior of "..." {
  a shouldBe b
}
>>>
behavior of "..." {
  a shouldBe b
}
