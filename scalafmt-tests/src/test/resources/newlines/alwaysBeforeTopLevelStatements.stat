<<< Create newlines where necessary
package a {
  import x1.b
  import x2.b
  package b {
  object a {
      val v1 = 1
      val v2 = 2
      val v3 = {
        3
      }
      def a = v1
      def b = v2
      def c: Int
      def d: Int = 2
      def e: Int = {
        3
      }
      def e = a match {
        case 1 => true
        case 2 => false
      }
    }
  }
}
>>>
package a {
  import x1.b
  import x2.b

  package b {

    object a {
      val v1 = 1
      val v2 = 2

      val v3 = {
        3
      }
      def a = v1
      def b = v2
      def c: Int
      def d: Int = 2

      def e: Int = {
        3
      }

      def e = a match {
        case 1 => true
        case 2 => false
      }
    }
  }
}
