<<< Don't add whitespace after comments
object A {
  /** test */
  def foo(): Int = 0
  // bar
  def foo(): Int = 0
}
>>>
object A {

  /** test */
  def foo(): Int = 0
  // bar
  def foo(): Int = 0
}

<<< Don't pull annotations away from classes
object A {
  @Annotation
  class B
  @Singleton
  class B @Inject()(val x: Int)
  @js.native
  class C() {
    def c = 5
  }
}
>>>
object A {

  @Annotation
  class B

  @Singleton
  class B @Inject()(val x: Int)

  @js.native
  class C() {
    def c = 5
  }
}
